{
    "name": "unfx-proxy-checker",
    "version": "1.5.0",
    "main": "public/main.js",
    "license": "MIT",
    "scripts": {
        "build": "run-p build:*",
        "build:main": "cross-env NODE_ENV=production webpack -p --config webpack.config.main.babel.js",
        "build:renderer": "cross-env NODE_ENV=production webpack -p --config webpack.config.renderer.babel.js",
        "start": "run-p start:*",
        "start:main": "electron --require @babel/register src/index",
        "start:renderer": "cross-env NODE_ENV=development webpack-dev-server -d --config webpack.config.renderer.babel.js",
        "package": "npm run build && electron-builder --win",
        "publish": "npm run build && electron-builder --win --publish always"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.3",
        "@babel/plugin-proposal-class-properties": "^7.3.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.0.0",
        "@babel/runtime": "^7.3.1",
        "babel-loader": "^8.0.5",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.0",
        "electron": "^4.0.8",
        "electron-builder": "^20.38.5",
        "electron-devtools-installer": "^2.2.4",
        "electron-react-devtools": "^0.5.3",
        "electron-updater": "^4.0.6",
        "file-loader": "^3.0.1",
        "ip": "^1.1.5",
        "js-flock": "^3.6.1",
        "mmdb-reader": "^1.2.0",
        "npm-run-all": "^4.1.5",
        "postcss-color-function": "^4.0.1",
        "postcss-css-variables": "^0.12.0",
        "postcss-easings": "^2.0.0",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.5.0",
        "react": "^16.8.2",
        "react-dom": "^16.8.2",
        "react-hot-loader": "^4.6.5",
        "react-markdown": "^4.0.6",
        "react-redux": "^6.0.0",
        "react-tabs": "^3.0.0",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "reselect": "^4.0.0",
        "socks-proxy-agent": "^4.0.2",
        "style-loader": "^0.23.1",
        "url-loader": "^1.1.2",
        "webpack": "^4.28.4",
        "webpack-cli": "^3.2.1",
        "webpack-dev-server": "^3.1.14"
    },
    "build": {
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "/public/icons/icon.ico",
            "publisherName": "Open Proxy Space",
            "artifactName": "${productName} v${version} ${arch} Win Installer.${ext}"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "assnctr",
                "repo": "unfx-proxy-checker",
                "private": false
            }
        ],
        "productName": "Unfx Proxy Checker",
        "copyright": "2019 assnctr (Open Proxy Space)",
        "extraResources": [
            "./files/**"
        ],
        "portable": {
            "artifactName": "${productName} v${version} Win Portable.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "differentialPackage": true
        }
    }
}
